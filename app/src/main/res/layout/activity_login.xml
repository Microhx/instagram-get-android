<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_login_holder"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="30dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp">

            <com.dolphpire.android.material.textfield.TextInputLayout
                android:id="@+id/tilInputLogIn"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email or username"
                app:errorEnabled="true"
                app:boxStrokeColor="#FFFFFF"
                app:boxStrokeWidth="1dp"
                app:boxStrokeColorNormal="#FFFFFF"
                app:hintTextColor="#FFFFFF">

                <com.dolphpire.android.material.textfield.TextInputEditText
                    android:id="@+id/tietInputLogIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="text"/>

            </com.dolphpire.android.material.textfield.TextInputLayout>

            <com.dolphpire.android.material.textfield.TextInputLayout
                android:id="@+id/tilInputPassword"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                app:errorEnabled="true"
                app:boxStrokeColor="#FFFFFF"
                app:boxStrokeWidth="1dp"
                app:boxStrokeColorNormal="#FFFFFF"
                app:hintTextColor="#FFFFFF"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#ffffff">

                <com.dolphpire.android.material.textfield.TextInputEditText
                    android:id="@+id/tietInputPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="textPassword"/>

            </com.dolphpire.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnLogIn"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:text="Login"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/appTextColorD"
                android:background="@drawable/background_custom_layer_10"
                android:backgroundTint="#E6FFFFFF"
                android:elevation="16dp"/>

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-5dp"
                android:background="#00ffffff"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="@color/appTextColorL"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Powered by DolphPire"
                android:textColor="@color/appTextColorL"
                android:textSize="14sp"
                tools:ignore="MissingPrefix" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_login_holder"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:elevation="10dp">

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="2dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:indeterminate="true"
            android:indeterminateTint="#ffffff" />
    </RelativeLayout>

</RelativeLayout>
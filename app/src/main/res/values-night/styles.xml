<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>

        <item name="drawerArrowStyle">@style/NavigationViewIconBackTint</item>
    </style>

    <style name="AppThemeFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>

        <item name="drawerArrowStyle">@style/NavigationViewIconBackTint</item>
    </style>

    <style name="LoginTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorBackground</item>
        <item name="colorPrimaryDark">@color/colorBackground</item>
        <item name="colorAccent">@color/colorBackground</item>

        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
    </style>

    <style name="LogInInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorAccent">@color/colorIGLogin2</item>
        <item name="boxStrokeColor">@color/colorIGLogin1</item>

        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorIGLogin1</item>
        <item name="android:textSize">10sp</item>

        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="android:colorAccent">@color/colorIGLogin2</item>
        <item name="android:colorControlNormal">@color/colorIGLogin1</item>
        <item name="android:colorControlActivated">@color/colorIGLogin2</item>
    </style>

    <style name="LogInHintStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorIGLogin2</item>
    </style>

    <style name="IGLoginStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorAccent">@color/loginGradientStart</item>
        <item name="boxStrokeColor">@color/loginGradientStart</item>

        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="android:colorAccent">@color/loginGradientStart</item>
        <item name="android:colorControlNormal">@color/loginGradientStart</item>
        <item name="android:colorControlActivated">@color/loginGradientStart</item>
    </style>

    <style name="RegisterHintStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/loginGradientStart</item>
    </style>

    <style name="EditInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorAccent">@color/colorUnselected</item>
        <item name="boxStrokeColor">@color/colorUnselected</item>

        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textSize">10sp</item>

        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="android:colorAccent">@color/colorUnselected</item>
        <item name="android:colorControlNormal">@color/colorUnselected</item>
        <item name="android:colorControlActivated">@color/colorUnselected</item>
    </style>

    <style name="EditCounterStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="EditHintStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorUnselected</item>
    </style>

    <style name="BlackCursor">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="EditTextOverlayLight" parent = "ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/appTextColorD</item>
    </style>

    <style name="EditTextOverlayDark" parent = "ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/appTextColorL</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="SheetDialogCamera" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="NavigationViewIconBackTint" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorAccent</item>
    </style>

    <style name="Theme.Swipe.Back.NoActionBar" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DPCheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">#000</item>   <!-- normal border color change as you wish -->
        <item name="colorControlActivated">#000</item> <!-- activated color change as you wish -->
    </style>

</resources>
